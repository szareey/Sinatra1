<% @messages.each do |message| %>
  <div class="message">
    <h3><%= message.title %> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
  </div>
  <div class="form_link">
    <a href="/messages/new">Post a message... It's FREE (for now)!</a>
  </div>
<% end %>